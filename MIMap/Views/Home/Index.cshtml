@{
    ViewBag.Title = "Home Page";
}
@model BusinessHandler.Model.Dashboard


<div id="wrapper">
    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">

        <!-- /.navbar-top-links -->
        <div class="navbar-default sidebar" role="navigation">
            <div class="sidebar-nav navbar-collapse">
                <ul class="nav" id="side-menu">
                    <li>
                        <a href="Index?state=MI"><i class="fa fa-dashboard fa-fw"></i>Michigan</a>
                    </li>
                    <li>
                        <a href="Index?state=MA"><i class="fa fa-dashboard fa-fw"></i>Massachusetts</a>
                    </li>
                    <li>
                        <a href="tables.html"><i class="fa fa-dashboard fa-fw"></i> Florida</a>
                    </li>
                </ul>
            </div>
            <!-- /.sidebar-collapse -->
        </div>
        <!-- /.navbar-static-side -->
    </nav>
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Dashboard</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-3 col-md-6">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-comments fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">@Model.NumberOfCities</div>
                                <div>Number Of Cities</div>
                            </div>
                        </div>
                    </div>
                    <a href="#">
                        <div class="panel-footer">
                            <span class="pull-left">View Details</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="panel panel-green">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-tasks fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">12</div>
                                <div>New Tasks!</div>
                            </div>
                        </div>
                    </div>
                    <a href="#">
                        <div class="panel-footer">
                            <span class="pull-left">View Details</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="panel panel-yellow">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-shopping-cart fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">124</div>
                                <div>New Orders!</div>
                            </div>
                        </div>
                    </div>
                    <a href="#">
                        <div class="panel-footer">
                            <span class="pull-left">View Details</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="panel panel-red">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-support fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">13</div>
                                <div>Support Tickets!</div>
                            </div>
                        </div>
                    </div>
                    <a href="#">
                        <div class="panel-footer">
                            <span class="pull-left">View Details</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <i class="fa fa-bell fa-fw"></i> Recent Scrapes
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="list-group">
                            @{
                                foreach (var r in Model.RecentScrapes)
                                {
                                    <a href="#" class="list-group-item">
                                        <i class="fa  fa-fw"></i> @r.CityName
                                        <span class="pull-right text-muted small">
                                            <em>@r.DeployDate</em>
                                        </span>
                                    </a>
                                }
                            }
                        </div>
                    </div>
                    <!-- /.panel-body -->
                </div>
            </div>
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <i class="fa fa-bell fa-fw"></i> Recent Meetings
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="list-group">
                            @{
                                foreach (var r in Model.RecentMeetings)
                                {
                                    <a href="#" class="list-group-item">
                                        <i class="fa  fa-fw"></i> @(r.CityName + "--" + r.Meeting)
                                        <span class="pull-right text-muted small">
                                            <em>@r.MeetingDate</em>
                                        </span>
                                    </a>
                                    }
                                }


                        </div>
                    </div>
                    <!-- /.panel-body -->
                </div>
            </div>
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <i class="fa fa-bar-chart-o fa-fw"></i> Chart Line
  
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div id="morris-area-chart"></div>
                    </div>
                    <!-- /.panel-body -->
                </div>

            </div>
            <!-- /.col-lg-8 -->

        </div>
        <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->
</div>
<!-- /#wrapper -->


    <!-- jQuery -->

<!-- Metis Menu Plugin JavaScript -->
<script src="~/SBAdmin/vendor/metisMenu/metisMenu.js"></script>
<!-- Morris Charts JavaScript -->
<script src="~/SBAdmin/vendor/raphael/raphael.js"></script>
<script src="~/SBAdmin/vendor/morrisjs/morris.js"></script>



<!-- Custom Theme JavaScript -->
<script src="~/SBAdmin/dist/js/sb-admin-2.js"></script>



<script>


    jQuery(document).ready(function ($) {
        Morris.Area({
            element: 'morris-area-chart',
            data: @Html.Raw( Model.MeetingLineGraphJsonData),
            xkey: 'period',
            ykeys: ['meetingDateAmount', 'scrapeDateAmount'],
            labels: ['Meeting Amount', 'Scrape Amount'],
            pointSize: 2,
            hideHover: 'auto',
            resize: true
        });
    });
</script>
